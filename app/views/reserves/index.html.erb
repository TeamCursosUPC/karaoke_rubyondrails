<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<div class="box-body table-responsive no-padding" style="min-height: 516px;">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Fecha inicio</th>
        <th>Hora inicio</th>
        <th>Descripcion</th>
        <th>User</th>
        <th>Room</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reserves.each do |reserf| %>
        <tr>
          <td><%= reserf.fecha_inicio %></td>
          <td><%= reserf.hora_inicio.strftime("%H:%M:%S") %></td>
          <td><%= reserf.descripcion %></td>
          <td><%= reserf.user.nombre %></td>
          <td><%= reserf.room.nombre %></td>
          <td><%= link_to 'Ver', reserf %></td>
          <td><%= link_to 'Editar', edit_reserf_path(reserf) %></td>
          <td><%= link_to 'Eliminar', reserf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Nueva reserva', new_reserf_path %>
