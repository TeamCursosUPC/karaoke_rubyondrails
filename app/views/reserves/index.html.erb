<div class="box box-primary">
  <div class="box-header">
    <h3 class="box-title">Listar Reservas</h3>
    <div class="pull-right">
      <%= link_to(new_reserf_path) do %>
          <p data-placement="top" data-toggle="tooltip" title="New">
            <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
              <span class="glyphicon glyphicon-plus"></span> Nueva Reserva
            </button>
          </p>
      <% end %>
      <span id="notice" class="alert"><%= notice %></span>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table id='reserves' class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>#</th>
        <th>Fecha inicio</th>
        <th>Hora inicio</th>
        <th>Descripcion</th>
        <th>User</th>
        <th>Room</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      </thead>

      <tbody>
      <% @reserves.each do |reserf| %>
          <tr>
            <td><%= reserf.id %></td>
            <td><%= reserf.fecha_inicio %></td>
            <td><%= reserf.hora_inicio.strftime("%H:%M:%S") %></td>
            <td><%= reserf.descripcion %></td>
            <td>
            <% if (reserf.user.nombre != nil) then %>
              <%= reserf.user.nombre %>
            <% else %>
                <%= reserf.user.email %>
            <% end %>
            </td>
            <td><%= reserf.room.nombre %></td>
            <td align="center">
              <%= link_to(edit_reserf_path(reserf)) do %>
                  <p data-placement="top" data-toggle="tooltip" title="Edit">
                    <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                      <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                  </p>
              <% end %>
            </td>
            <td align="center">
              <%= link_to(reserf, method: :delete ) do %>
                  <p data-placement="top" data-toggle="tooltip" title="Delete" >
                    <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                      <span class="glyphicon glyphicon-trash"></span>
                    </button>
                  </p>
              <% end %>
            </td>
            <!-- td><!-- %= link_to 'Ver', reserf %></td -->
            <!-- td><!-- %= link_to 'Editar', edit_reserf_path(reserf) %></td -->
            <!-- td><!-- %= link_to 'Eliminar', reserf, method: :delete, data: { confirm: 'Are you sure?' } %></td -->
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

