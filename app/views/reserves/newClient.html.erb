<h1>Nueva Reserva</h1>

<%= bootstrap_form_for(new_reserf_path) do |f| %>

    <%= f.date_select :fecha_inicio, label: "Fecha de inicio:" %>
    <%= f.time_select :hora_inicio, label: "Hora de inicio:" %>
    <%= f.text_field :descripcion %>
    <%= f.collection_select :user_id, User.all, :id, :email, label: "Usuario:" %>
    <%= f.collection_select :room_id, Room.all, :id, :nombre %>

    <%= f.submit 'Guardar', :class => 'btn btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reserves_path, :class => 'btn btn-default' %>

<% end %>