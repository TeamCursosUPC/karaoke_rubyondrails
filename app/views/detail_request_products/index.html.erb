<p id="notice"><%= notice %></p>

<h1>Detail Request Products</h1>

<table>
  <thead>
    <tr>
      <th>Request</th>
      <th>Product</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detail_request_products.each do |detail_request_product| %>
      <tr>
        <td><%= detail_request_product.request %></td>
        <td><%= detail_request_product.product %></td>
        <td><%= detail_request_product.cantidad %></td>
        <td><%= detail_request_product.precio %></td>
        <td><%= link_to 'Show', detail_request_product %></td>
        <td><%= link_to 'Edit', edit_detail_request_product_path(detail_request_product) %></td>
        <td><%= link_to 'Destroy', detail_request_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

