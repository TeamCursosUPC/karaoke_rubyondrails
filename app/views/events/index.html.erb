 <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">Lista de Eventos Registrados</h3>
      <div class="pull-right">
          <%= link_to(new_event_path) do %>
              <p data-placement="top" data-toggle="tooltip" title="New">
                <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
                  <span class="glyphicon glyphicon-plus"></span> Nuevo Evento
                </button>
              </p>
          <% end %>
          <span id="notice" class="alert"><%= notice %></span>
      </div>
    </div>

<!-- Fin Cabezera -->
<!-- <h1>Events</h1> -->
   <div class="box-body table-responsive no-padding">
    <table id='events' class="display" cellspacing="0" width="100%">
     <thead>
      <tr>
       <th>#</th>
       <th>Nombre de evento</th>
       <th>Fecha y hora</th>
       <th>Capacidad maxima</th>
       <th>Descripcion</th>
       <th>Edit</th>
       <th>Delete</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.Nombre_de_evento %></td>
        <td><%= event.Fecha_y_hora %></td>
        <td><%= event.Capacidad_maxima %></td>
        <td><%= event.Descripcion %></td>
        <td align="center">
              <%= link_to(edit_event_path(event)) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                      <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </p>
                <% end %>
            </td>
            <td align="center">
                <%= link_to(event, method: :delete, data: { confirm: 'Are you sure?' } ) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Delete" >
                      <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </p>
                <% end %>
            </td>
        </tr>
       <% end %>
      </tbody>
    </table>
   </div> 
   
  </div> 
    <br>
