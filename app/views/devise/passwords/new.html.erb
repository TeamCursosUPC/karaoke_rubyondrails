<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-success" >
      <div class="panel-heading">
        <div class="panel-title">Reestablece tu Contraseña</div>
      </div>

      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.email_field :email, autofocus: true, placeholder:"Escribe tu correo electronico", class:"form-control", type:"email" %>
            </div>

            <div style="margin-bottom: 25px" class="input-group">
              <div class="col-md-12">
                <%= f.submit "Enviar Correo", class:"btn btn-success  btn-responsive" %>
                <%= link_to 'Cancelar', new_session_path(resource_name) , class:"btn btn-danger  btn-responsive"  %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                  <strong>AVISO:</strong> Revisa tu bandeja de entrada con las instrucciones para reestablecet tu contraseña.
                </div>
              </div>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<%= devise_error_messages! %>
