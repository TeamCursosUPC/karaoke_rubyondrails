<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-success" >
      <div class="panel-heading">
        <div class="panel-title">Ingreso al Sistema</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px">
          <%= link_to "Olvidaste tu ContraseÃ±a?", new_password_path(resource_name) %>
        </div>
      </div>

      <div style="padding-top:30px" class="panel-body" >

        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input autofocus="autofocus" placeholder="Ingrese correo electronico" class="form-control" type="email" value="" name="user[email]" id="user_email">
            </div>

            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <input autocomplete="off" placeholder="Ingrese Password" class="form-control" type="password" name="user[password]" id="user_password">
            </div>

            <div style="margin-bottom: 25px" class="input-group">
              <div class="col-md-12">
                <%= f.submit "Iniciar Sesion", class:"btn btn-success" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                  No tienes una cuenta!
                  <%= link_to "Registrate Aqui", new_registration_path(resource_name) %>
                </div>
              </div>
            </div>
      <% end %>

      </div>
    </div>
  </div>
</div>
