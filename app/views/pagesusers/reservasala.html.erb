<!-- Select Basic -->
<div class="form-group">
  <%= bootstrap_form_for(@reserf) do |f| %>


      <%= f.date_select :fecha_inicio, label: "Fecha de inicio:" %>
      <%= f.time_select :hora_inicio, label: "Hora de inicio:" %>
      <%= f.text_field :descripcion, label: "DescripciÃ³n:" %>
