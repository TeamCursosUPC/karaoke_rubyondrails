<p id="notice"><%= notice %></p>
<!-- Cabezera -->

 <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">Lista de Usuarios Registrados</h3>
      <div class="pull-right">
          <%= link_to(new_user_path) do %>
              <p data-placement="top" data-toggle="tooltip" title="New">
                <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
                  <span class="glyphicon glyphicon-plus"></span> New User
                </button>
              </p>
          <% end %>
          <span id="notice" class="alert"><%= notice %></span>
      </div>
    </div>

<!-- Fin Cabezera -->

<!-- <h1>Users</h1> -->
   <div class="box-body table-responsive no-padding">

    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Apellido paterno</th>
          <th>Apellido materno</th>
          <th>Correo</th>
          <th>Password</th>
          <th>Dni</th>
          <th>Telefono</th>
          <th>Edit</th>
          <th>Delete</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.Nombre %></td>
            <td><%= user.Apellido_Paterno %></td>
            <td><%= user.Apellido_Materno %></td>
            <td><%= user.Correo %></td>
            <td><%= user.Password %></td>
            <td><%= user.DNI %></td>
            <td><%= user.Telefono %></td>
            <td align="center">
              <%= link_to(edit_user_path(user)) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                      <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </p>
                <% end %>
            </td>
            <td align="center">
                <%= link_to(user, method: :delete, data: { confirm: 'Are you sure?' } ) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Delete" >
                      <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </p>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div> 
   
  </div> 
