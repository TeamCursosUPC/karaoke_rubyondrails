<p id="notice"><%= notice %></p>
<!-- Cabezera -->

 <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">Lista de Salas Registradas</h3>
      <div class="pull-right">
          <%= link_to(new_sala_path) do %>
              <p data-placement="top" data-toggle="tooltip" title="New">
                <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
                  <span class="glyphicon glyphicon-plus"></span> New Sala
                </button>
              </p>
          <% end %>
          <span id="notice" class="alert"><%= notice %></span>
      </div>
    </div>

<!-- Fin Cabezera -->

<!-- <h1>Salas</h1> -->
    <div class="box-body table-responsive no-padding">

    <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Local</th>
            <th>Nombre sala</th>
            <th>Capacidad</th>
            <th>Descripcion</th>
            <th>Edit</th>
            <th>Delete</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @salas.each do |sala| %>
            <tr>
              <td><%= sala.id %></td>
              <td><%= sala.Local %></td>
              <td><%= sala.Nombre_Sala %></td>
              <td><%= sala.Capacidad %></td>
              <td><%= sala.Descripcion %></td>
              <td align="center">
              <%= link_to(edit_sala_path(sala)) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                      <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </p>
                <% end %>
              </td>
              <td align="center">
                <%= link_to(sala, method: :delete, data: { confirm: 'Are you sure?' } ) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Delete" >
                      <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
       </table>
      </div> 
     </div>      
