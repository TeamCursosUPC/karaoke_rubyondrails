    <div id="error_explanation">
      <ul>
      <li><%= pluralize(comment.errors.count, "Campo mal llenado") %> no se pudo guardar:</li>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

