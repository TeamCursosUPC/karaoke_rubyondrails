  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">List of Products</h3>
      <div class="pull-right">
          <%= link_to(new_product_path) do %>
              <p data-placement="top" data-toggle="tooltip" title="New">
                <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
                  <span class="glyphicon glyphicon-plus"></span> New Product
                </button>
              </p>
          <% end %>
          <span id="notice" class="alert"><%= notice %></span>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">

      <table class="table table-hover table-bordered">
        <thead>
          <tr >
            <th>#</th>
            <th>Nombre del Producto</th>
            <th>Tipo de Producto</th>
            <th>Precio Unitario</th>
            <th>Disponibilidad</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.nombre %></td>
              <td><%= product.tipo %></td>
              <td><%= product.precio %></td>
              <td><%= product.disponibilidad %></td>
              <td align="center">
                <%= link_to(edit_product_path(product)) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                      <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </p>
                <% end %>
              </td>
              <td align="center">
                <%= link_to(product, method: :delete ) do %>
                    <p data-placement="top" data-toggle="tooltip" title="Delete" >
                      <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </p>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.box-body -->
  </div>


