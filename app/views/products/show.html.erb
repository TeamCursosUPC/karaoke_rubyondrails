<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @product.nombre %>
</p>

<p>
  <strong>Tipo:</strong>
  <%= @product.tipo %>
</p>

<p>
  <strong>Precio:</strong>
  <%= @product.precio %>
</p>

<p>
  <strong>Disponibilidad:</strong>
  <%=
    if @product.disponibilidad == '1'
      'Disponible'
    else
      'No Disponible'
    end
  %>
</p>

