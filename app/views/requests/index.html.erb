<div class="box box-primary">
  <div class="box-header">
    <h3 class="box-title">Listar Reservas</h3>
    <div class="pull-right">
      <%= link_to(new_request_path) do %>
          <p data-placement="top" data-toggle="tooltip" title="New">
            <button class="btn btn-sm btn-primary btn-create" data-title="New" data-toggle="modal">
              <span class="glyphicon glyphicon-plus"></span> Nueva Pedido
            </button>
          </p>
      <% end %>
      <span id="notice" class="alert"><%= notice %></span>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table id='request' class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>#</th>
        <th>User</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      </thead>

      <tbody>
      <% @requests.each do |request| %>
          <tr>
            <td><%= request.id %></td>
            <td><%= request.user.nombre %> <%= request.user.apellido_paterno %> <%= request.user.apellido_materno %></td>
            <td align="center">
              <%= link_to(edit_request_path(request)) do %>
                  <p data-placement="top" data-toggle="tooltip" title="Edit">
                    <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" >
                      <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                  </p>
              <% end %>
            </td>
            <td align="center">
              <%= link_to(request, method: :delete ) do %>
                  <p data-placement="top" data-toggle="tooltip" title="Delete" >
                    <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" >
                      <span class="glyphicon glyphicon-trash"></span>
                    </button>
                  </p>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

